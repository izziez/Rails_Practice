<p id="notice"><%= notice %></p>

<h1>Listing Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Next vet appt</th>
      <th>Date</th>
      <th>Vet notes</th>
      <th>Text</th>
      <th>Next farrier appt</th>
      <th>Date</th>
      <th>Farrier notes</th>
      <th>Text</th>
      <th>Chiropractor appt</th>
      <th>Date</th>
      <th>Chiropractor notes</th>
      <th>Text</th>
      <th>Dentist appt</th>
      <th>Date</th>
      <th>Dentist notes</th>
      <th>Text</th>
      <th>Next message appt</th>
      <th>Date</th>
      <th>Massage notes</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.next_vet_appt %></td>
        <td><%= appointment.date %></td>
        <td><%= appointment.vet_notes %></td>
        <td><%= appointment.text %></td>
        <td><%= appointment.Next_Farrier_appt %></td>
        <td><%= appointment.date %></td>
        <td><%= appointment.farrier_notes %></td>
        <td><%= appointment.text %></td>
        <td><%= appointment.Chiropractor_appt %></td>
        <td><%= appointment.date %></td>
        <td><%= appointment.Chiropractor_notes %></td>
        <td><%= appointment.text %></td>
        <td><%= appointment.Dentist_Appt %></td>
        <td><%= appointment.date %></td>
        <td><%= appointment.Dentist_Notes %></td>
        <td><%= appointment.text %></td>
        <td><%= appointment.Next_Message_Appt %></td>
        <td><%= appointment.date %></td>
        <td><%= appointment.Massage_Notes %></td>
        <td><%= appointment.text %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

